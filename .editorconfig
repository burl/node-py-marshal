# editorconfig.org
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
charset = utf-8

[*.{pl,pm,PM,pod}]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{js,json}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[Makefile,*.mk]
indent_style = tab
tab_width = 4

[*.go]
indent_style = tab
tab_width = 4
